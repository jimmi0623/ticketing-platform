# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ticketing_platform
DB_USER=root
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRE=30d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost
TRUST_PROXY=false

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
API_KEY_HEADER=x-api-key

# Admin Configuration (Remove in production, create via API)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=generate_secure_password_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=ticketing-platform

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_SECURE=false
SESSION_MAX_AGE=86400000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false

# Rate Limiting per endpoint
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_ORDER_MAX=10
RATE_LIMIT_SEARCH_MAX=50